<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">
	
    <!--****************************** ARCHIVO DE MENSAJES ********************-->	
    <application>
        <message-bundle>
            com.deceval.auditoria.web.resources.messages.MessagesResources
        </message-bundle>
        <resource-bundle>
	        <base-name>com.deceval.auditoria.web.resources.messages.MessagesResources</base-name>
	        <var>msg</var>
    	</resource-bundle>
        <locale-config>
            <default-locale>es</default-locale>
        </locale-config>
        <locale-config>
        	<default-locale>en</default-locale>
        </locale-config>
        <view-handler>org.ajax4jsf.application.AjaxViewHandler</view-handler>
    </application>
    <managed-bean>
        <managed-bean-name>
            loginJSFBean</managed-bean-name>
        <managed-bean-class>
            com.deceval.auditoria.web.backingbean.login.LoginJSFBean</managed-bean-class>
        <managed-bean-scope>
            request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>
            loginOTPJSFBean</managed-bean-name>
        <managed-bean-class>
            com.deceval.auditoria.web.backingbean.login.LoginOTPJSFBean</managed-bean-class>
        <managed-bean-scope>
            session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>
            consultaJSFBean</managed-bean-name>
        <managed-bean-class>
            com.deceval.auditoria.web.backingbean.consulta.ConsultaJSFBean</managed-bean-class>
        <managed-bean-scope>
            session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <display-name>
            jsp/consulta/consulta</display-name>
        <from-view-id>
            /jsp/consulta/consulta.jsp</from-view-id>
        <navigation-case>
            <from-outcome>
                resultadoConsultaOperacion</from-outcome>
            <to-view-id>
                /jsp/consulta/consultaresultadooperacion.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                resultadoConsultaOrigen</from-outcome>
            <to-view-id>
                /jsp/consulta/consultaresultadoorigen.jsp</to-view-id>
        </navigation-case>		
        <navigation-case>
            <from-outcome>
                detalleResultadoConsultaOrigen</from-outcome>
            <to-view-id>
                /jsp/consulta/consultadetalleresultadoorigen.jsp</to-view-id>
        </navigation-case>			
    </navigation-rule>
    <navigation-rule>
        <display-name>
            jsp/consulta/consultaresultadooperacion</display-name>
        <from-view-id>
            /jsp/consulta/consultaresultadooperacion.jsp</from-view-id>
        <navigation-case>
            <from-outcome>
                detalleResultadoConsultaOperacion</from-outcome>		
            <to-view-id>
                /jsp/consulta/consultadetalleresultadooperacion.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                parametrosConsulta</from-outcome>		
            <to-view-id>
                /jsp/consulta/consulta.jsp</to-view-id>
        </navigation-case>		
    </navigation-rule>
    <navigation-rule>
        <display-name>
            jsp/consulta/consultaresultadoorigen</display-name>
        <from-view-id>
            /jsp/consulta/consultaresultadoorigen.jsp</from-view-id>
        <navigation-case>
            <from-outcome>
                detalleResultadoConsultaOrigen</from-outcome>		
            <to-view-id>
                /jsp/consulta/consultadetalleresultadoorigen.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                parametrosConsulta</from-outcome>		
            <to-view-id>
                /jsp/consulta/consulta.jsp</to-view-id>
        </navigation-case>			
    </navigation-rule>	
    <navigation-rule>
        <display-name>
            jsp/consulta/consultadetalleresultadooperacion</display-name>
        <from-view-id>
            /jsp/consulta/consultadetalleresultadooperacion.jsp</from-view-id>
        <navigation-case>
            <from-outcome>
                resultadoConsultaOperacion</from-outcome>		
            <to-view-id>
                /jsp/consulta/consultaresultadooperacion.jsp</to-view-id>
        </navigation-case>		
    </navigation-rule>	
    <navigation-rule>
        <display-name>
            jsp/consulta/consultadetalleresultadoorigen</display-name>
        <from-view-id>
            /jsp/consulta/consultadetalleresultadoorigen.jsp</from-view-id>
        <navigation-case>
            <from-outcome>
                parametrosConsulta</from-outcome>		
            <to-view-id>
                /jsp/consulta/consulta.jsp</to-view-id>
        </navigation-case>		
        <navigation-case>
            <from-outcome>
                resultadoConsultaOrigen</from-outcome>		
            <to-view-id>
                /jsp/consulta/consultaresultadoorigen.jsp</to-view-id>
        </navigation-case>			
    </navigation-rule>
    
    <navigation-rule>
        <description>Regla de navegacion para autenticacion con OTP
        </description>
        <from-view-id>/loginOTP.jsp</from-view-id>
        <navigation-case>
            <from-outcome>IR_INICIO_APLICACION</from-outcome>
            <to-view-id>/jsp/home/home.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/loginOTP.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>		
</faces-config>
